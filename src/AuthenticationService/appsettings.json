{
	"Serilog": {
		"MinimumLevel": {
			"Default": "Verbose",
			"Override": {
				"Microsoft.AspNetCore.CookiePolicy": "Information",
				"Microsoft.AspNetCore.Cors": "Debug",
				"Microsoft.AspNetCore.DataProtection": "Information",
				"Microsoft.AspNetCore.Hosting": "Warning",
				"Microsoft.AspNetCore.Routing": "Information",
				"Microsoft.AspNetCore.Server.Kestrel": "Warning"
			}
		},
		"WriteTo": [
			{
				"Name": "Async",
				"Args": {
					"configure": [
						{
							"Name": "Console",
							"Args": {
								"theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
								"outputTemplate": "[{Level:u3}] [{Timestamp:HH:mm:ss.ms}] {Message:lj} at {SourceContext} {NewLine}{Exception}"
							}
						}
					]
				}
			}
		]
	},
	"AllowedHosts": "localhost",
	"AppSettings": {
		"ApplicationName": "authService",
		"HTTP": {
			"Authentication": {
				"Enabled": true,
				"TokenPolicy": {
					"AllowExpired": true
				},
				"Connection": {
					"AllowInSecureCommunication": true,
					"Authority": "http://localhost:8080/realms/Example-Realm",
					"Audience": "authservice"
				},
				"CookiePolicy": {
					"DisableSameSiteRestriction": false,
					"RestrictionPaths": {
						"X-Session": "/auth",
						"X-Refresh": "/auth"
					}
				}
			},
			"CORS": {
				"Enabled": "true",
				"Policies": {
					"AllowLocalhost": {
						"IsDefault": true,
						"AllowedOrigins": [
							"http://127.0.0.1:4200",
							"http://localhost:4200"
						],
						"AllowedHeaders": [
							"authorization",
							"accept",
							"content-type",
							"origin"
						],
						"AllowCredentials": true
					}
				}
			}
		},
		"Integration": {
			"Caching": {
				"Endpoint": "localhost:6379",
				"Type": "Redis"
			},
			"IdentityService": {
				"Endpoint": "http://localhost:8080",
				"Realm": "Example-Realm",
				"ServiceType": "Keycloak_v24",
				"RequestedResponseType": "code",
				"AuthorizationPolicy": {
					"Mode": "UserPassword",
					"UserId": "authservice",
					"UserSecret": "REPLACE_ME"
				},
				"DiagnosticPolicy": {
					"Enabled": true
				}
			}
		}
	}
}
