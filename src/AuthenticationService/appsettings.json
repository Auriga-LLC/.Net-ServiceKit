{
	"Serilog": {
		"MinimumLevel": {
			"Default": "Verbose",
			"Override": {
				"Microsoft.AspNetCore.CookiePolicy": "Information",
				"Microsoft.AspNetCore.Cors": "Debug",
				"Microsoft.AspNetCore.DataProtection": "Information",
				"Microsoft.AspNetCore.Hosting": "Warning",
				"Microsoft.AspNetCore.Routing": "Information",
				"Microsoft.AspNetCore.Server.Kestrel": "Warning"
			}
		},
		"WriteTo": [
			{
				"Name": "Async",
				"Args": {
					"configure": [
						{
							"Name": "Console",
							"Args": {
								"theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
								"outputTemplate": "[{Level:u3}] [{Timestamp:HH:mm:ss.ms}] {Message:lj} at {SourceContext} {NewLine}{Exception}"
							}
						}
					]
				}
			}
		]
	},
	"AllowedHosts": "localhost",
	"Application": {
		"Name": "authService",
		"PublicEndpoint": "http://localhost:5145/"
	},
	"HTTP": {
		"Authentication": {
			"Enabled": true,
			"TokenPolicy": {
				"AllowExpired": true
			},
			"AuthorityConnection": {
				"AllowInSecureCommunication": true,
				"PublicEndpoint": "http://localhost:8080/",
				"InternalEndpoint": "http://localhost:8080/",
				"Realm": "Example-Realm",
				"Audience": "authservice",
				"ServiceType": "Keycloak_v24",
				"RequestedResponseType": "code",
				"Authentication": {
					"Type": "Token",
					"Scheme": "Bearer",
					"Mode": "UserPassword",
					"UserId": "authservice",
					"UserSecret": "TODO_CHANGE_ME"
				}
			},
			"CookiePolicy": {
				"DisableSameSiteRestriction": false,
				"RestrictionPaths": {
					"X-Session": "/auth",
					"X-Refresh": "/auth"
				}
			}
		},
		"Authorization": {
			"Enabled": true
		},
		"CORS": {
			"Enabled": "true",
			"Policies": {
				"AllowLocalhost": {
					"IsDefault": true,
					"AllowedOrigins": [
						"http://127.0.0.1:4200",
						"http://localhost:4200"
					],
					"AllowedHeaders": [
						"authorization",
						"accept",
						"content-type",
						"origin"
					],
					"AllowCredentials": true
				}
			}
		},
		"DiagnosticPolicy": {
			"TraceHttp": true
		}
	},
	"Caching": {
		"Endpoint": "localhost:6379",
		"Type": "Redis"
	}
}
